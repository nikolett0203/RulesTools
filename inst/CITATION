    bibtype = "Manual",
    title = "RulesTools: Tools for Preparing, Analyzing, and Visualizing Association Rules",
    author = person("Nikolett", "Toth"),
    year = 2025,
    note = "R package version 0.1.0",
    url = "https://github.com/nikolett0203/RulesTools"
)

